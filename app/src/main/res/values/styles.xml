<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppCompatTheme" parent="@style/Theme.AppCompat.DayNight">
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PopUpTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="listPopupWindowStyle">@style/myListPopupWindow</item>
    </style>
    <style name="myListPopupWindow" parent="Widget.MaterialComponents.PopupMenu.ListPopupWindow">
        <item name="android:popupBackground">@drawable/popup_bg</item>
    </style>

    <style name="CustomProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/custom_progress_bar_horizontal</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>
</resources>